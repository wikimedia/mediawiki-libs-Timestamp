{
	"name": "wikimedia/timestamp",
	"description": "Creation, parsing, and conversion of timestamps",
	"license": "GPL-2.0-or-later",
	"homepage": "https://www.mediawiki.org/wiki/Timestamp",
	"authors": [
		{
			"name": "Tyler Romeo",
			"email": "tylerromeo@gmail.com"
		}
	],
	"autoload": {
		"files": [
			"src/defines.php"
		],
		"psr-4": {
			"Wikimedia\\Timestamp\\": "src/"
		}
	},
	"provide": {
		"psr/clock-implementation": "1.0.0"
	},
	"require": {
		"php": ">=8.1",
		"psr/clock": "1.0.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "48.0.0",
		"mediawiki/mediawiki-phan-config": "0.17.0",
		"mediawiki/minus-x": "1.1.3",
		"ockcyp/covers-validator": "1.7.0",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0",
		"phpunit/phpunit": "9.6.21"
	},
	"scripts": {
		"changelog": "git log HEAD --format=\"* %s (%aN)\" --no-merges --not --tags | sort | grep -vE \"^\\* (build|docs?|tests?):\"",
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"@phpcs",
			"phan --allow-polyfill-parser --long-progress-bar",
			"minus-x check ."
		],
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phan": "phan -d . --long-progress-bar",
		"phpcs": "phpcs -sp"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
